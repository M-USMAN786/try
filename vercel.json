{
  "version": 2,
  "builds": [
    {
      "src": "manage.py",
      "use": "@vercel/python@3.12"  
    },
    {
      "src": "staticfiles/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/staticfiles/$1"
    },
    {
      "src": "/(.*)",
      "dest": "manage.py"
    }
  ],
  "env": {
    "DJANGO_SECRET_KEY": "@django-secret-key",
    "DEBUG": "false",
    "ALLOWED_HOSTS": "training11.vercel.app",
    "DATABASE_URL": "@database-url" 
  }
}
